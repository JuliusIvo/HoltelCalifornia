@model IEnumerable<User>

@{ 
    ViewData["Title"] = "All user orders";
}

<div class="row">
    <div class="col-md-8 offset-2">
        <p>
            <h4>List of all your orders</h4>
        </p>
        @foreach(var item in Model){
        <table class="table">
            <thead>
                <tr>
                    <th>Order ID</th>
                    <th>Items</th>
                    <th>Total</th>
                    <th>User</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in @item.Users_Orders)
                {
                <tr>
                    <td class="align-middle">@order.OrderId</td>
                    <td class="align-middle">@order.RoomId</td>
                    <td class="align-middle">@order.amount</td> 
                    <td class="align-middle"> Model.Name </td>
                    </tr>
                }
            </tbody>
        </table>
        }

    </div>
</div>